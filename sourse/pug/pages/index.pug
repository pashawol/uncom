block variables
	- //remove gray-header
	- let  mainPage= 'main-page gray-header'
	- let  bg= 'index-320.png'

block title
	- let  title= 'title'
	title= title
block pagecontent
	+mob-mnu()
	+header()(class="gray")
		+top-nav()
	+topLine()(class="bg-light")
	+headerBlock()
	+sNew()
	+sSphere()
	+sProdGroup()
	+sPlants()
	+sForm()
	+b.news-bl.section
		.container
			+e.row.row
				.col-xl-4
					+sNews()
				.col-xl-8
					+sPrint()
	+sMap()
	+sFormAlt()
	+footer()